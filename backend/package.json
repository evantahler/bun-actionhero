    "migrations": "bun run migrations.ts",
    "compile": "bun build actionhero.ts --compile --outfile actionhero",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "colors": "^1.4.0",
    "commander": "^12.1.0",
    "cookie": "^0.6.0",
    "drizzle-orm": "^0.45.1",
