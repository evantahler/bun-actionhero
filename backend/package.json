    "ioredis": "^5.9.2",
    "node-resque": "^9.4.0",
    "pg": "^8.17.2",
    "typescript": "^5.9.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bun": "latest",
    "@types/cookie": "^0.6.0",
    "@types/formidable": "^3.4.6",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.20.18",
    "prettier": "^3.8.0",
    "prettier-plugin-organize-imports": "^4.3.0"
